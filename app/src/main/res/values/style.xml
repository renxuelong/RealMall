<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        // 导航栏的颜色(ActionBar/Toolbar)
        <item name="colorPrimary">@color/colorPrimary</item>
        // 状态栏颜色
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        // RadioButton/EditText 正在输入时的颜色
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="translucent" parent="AppTheme" />

    <style name="search_view">
        <item name="android:textSize">@dimen/search_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="bigButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigButtonTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/largePaddingSize</item>
        <item name="android:paddingRight">@dimen/largePaddingSize</item>
    </style>

    <style name="price">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/crimson</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="sign_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="sign_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColorHint">@color/md_grey_400</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="divider_margin10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/gray_divider</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="btn_submit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/selector_red_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>