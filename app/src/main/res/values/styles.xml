<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mint_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/dividerHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>
</resources>